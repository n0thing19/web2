<html>
    <body>
        <form method="POST" action="/auth/login.php">
            <div>
                <label>Username</label>
                <input type="text" name="username" value="{{ username }}"/>
            </div>
            <div>
                <label>Password</label>
                <input type="password" name="password"/>
            </div>
            {% if error %}
            <div>
                <p>{{ error }}</p>
            </div>
            {% endif %}
            <div>
                <input type="submit" value="login"/>
            </div>
        </form>
    </body>
</html>